<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="static/css/navbar.css">
    <link rel="stylesheet" href="static/css/details.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <title>Details</title> 
  </head>
  <body>
    {{> navbar}}
    <div class="container-fluid row my-3 justify-content-center details_page">
      <div class="col-md-2 text-center group">
        <center><h3><b>Groups</b></h2></center>
        <div class="group-body">
        {{#if groupEmpty}}
        <p>{{message}}</p>
        {{/if}}

        {{#each group}}
          <div class="input-group my-2 justify-content-center group_translate">
            <button type="button" id="{{this}}_btn" class="btn btn-outline-secondary category_btn" onclick="load_details_in_group('{{this}}')">{{this}}</button>
            <button class="bi bi-x-lg input-group-text bla_bla" onclick="delete_group('{{this}}')"></button>
          </div>
        {{/each}}
        </div>
      </div>

      <div class="col-md-8 text-center bills">
        <center><h3><b id="billss">Bills</b></h2></center>
        <div class="bills_body" id="body_bills">
        
        {{#if fieldsEmpty}}
            <p>{{message}}</p>
        {{/if}}

          <div class="card mx-2 my-3 fields"
              style="background-image: linear-gradient(to right,#a5a5fe,white,#a5a5fe);">
                <div class="row text-center mx-2">
                  <div class="text-center">
                      <a><b>Destination:</b></a>
                      <a>{{destination}}</a>
                  </div>
                </div>
                <div class="row justify-content-center">
                  <div class="col-auto">
                      <a><b>Group:</b></a>
                      <a>{{grpSingle}}</a>
                  </div>
                  <div class="col-auto">
                      <a><b>Date:</b></a>
                      <a style="color: #a2a396;">{{date}}</a>
                  </div>
                  {{!-- <div class="col-auto">
                      <a><b>Amount:</b></a>
                      <a style="color: red;">-9999</a>
                  </div> --}}
                </div>
                {{#each members}}
                <div class="row justify-content-center">
                    <div class="col-auto my-2">
                    <a><b>Member:</b></a>
                    <a>{{this.member_name}}</a>
                    </div>
                    <div class="col-auto my-2">
                    <a><b>Amount:</b></a>
                    <a style="color: rgb(0, 0, 0);">{{this.member_amount}}</a>
                    </div>
                    <div class="col-auto my-2">
                    <a><b>Status:</b></a>
                    <a style="color: #000000;">{{this.member_status}}</a>
                    </div>
                    <div class="col-auto my-2">
                      <button class="paid_button" id="{{this.member_name}}_Button" type="button" style="color: white; border-radius:25px;width:100px;" onclick="paid('{{this.inside_group_name}}','{{this.member_name}}')">âœ”</button>
                    </div>
                </div>
                {{/each}}
          </div>
        </div>
      </div>
    </div>
    <script src="static/js/details.js"> </script>
  </body>
</html>
<script src="static/js/navbar.js"></script>